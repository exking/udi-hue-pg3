<nodeDefs>
    <!-- Hub Node -->
    <nodeDef id="HUEBR" nls="HHUB">
        <editors />
        <sts>
            <st id="ST" editor="HCONNECT" />
	    </sts>
        <cmds>
            <sends />
            <accepts>
                <cmd id="DISCOVER">
                </cmd>
            </accepts>
        </cmds>
    </nodeDef>

    <!-- Color Light -->
    <nodeDef id="COLOR_LIGHT" nls="HCL">
        <editors />
        <sts>
            <st id="ST" editor="HCLST" />
            <st id="CLITEMP" editor="HKELVIN" />
            <st id="RR" editor="HDURATION" />                        
            <st id="GV1" editor="HCLXY" />  <!-- Color X -->
            <st id="GV2" editor="HCLXY" />  <!-- Color Y -->
            <st id="GV3" editor="HCLHSB" /> <!-- Hue -->
            <st id="GV4" editor="HCLHSB" /> <!-- Saturation -->
            <st id="GV5" editor="HCLHSB" /> <!-- Brightness -->
            <st id="GV6" editor="HCONNECT" /> <!-- Reachable -->
        </sts>
        <cmds>
            <sends />
            <accepts>
                <cmd id="DON" />
                <cmd id="DOF" />
                <cmd id="QUERY" />
                <cmd id="APPLY" />
                <cmd id="SET_COLOR_RGB">
                    <p id="R" editor="HCLRGB" />
                    <p id="G" editor="HCLRGB" />
                    <p id="B" editor="HCLRGB" />
                </cmd>
                <cmd id="SET_COLOR_XY">
                    <p id="X" editor="HCLXY" init="GV1" />
                    <p id="Y" editor="HCLXY" init="GV2" />
                </cmd>
                <cmd id="SET_COLOR">
                    <p id="" editor="HCSEL" />
                </cmd>
                <cmd id="SET_HUE">
                    <p id="" editor="HCLHSB" init="GV3"/>
                </cmd>
                <cmd id="SET_SAT">
                    <p id="" editor="HCLHSB" init="GV4"/>
                </cmd>
                <cmd id="SET_BRI">
                    <p id="" editor="HCLHSB" init="GV5" />
                </cmd>
                <cmd id="SET_KEL">
                    <p id="" editor="HKELVIN" init="CLITEMP" />
                </cmd>
                <cmd id="SET_DUR">
                    <p id="" editor="HDURATION" init="RR" />
                </cmd>
                <cmd id="SET_HSB">
                    <p id="H" editor="HCLHSB" init="GV3" />
                    <p id="S" editor="HCLHSB" init="GV4" />
                    <p id="B" editor="HCLHSB" init="GV5" />
                    <p id="D" editor="HDURATION" init="RR" />
                </cmd>
            </accepts>
        </cmds>
    </nodeDef>

