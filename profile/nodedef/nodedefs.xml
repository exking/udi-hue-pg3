            <st id="GV5" editor="HCLHSB" /> <!-- Brightness -->
            <st id="GV6" editor="HCONNECT" /> <!-- Reachable -->
        </sts>
        <cmds>
            <sends />
            <accepts>
                <cmd id="DON" />
                <cmd id="DOF" />
                <cmd id="QUERY" />
                <cmd id="APPLY" />
                <cmd id="SET_BRI">
                    <p id="" editor="HCLHSB" init="GV5" />
                </cmd>
                <cmd id="SET_KEL">
                    <p id="" editor="HKELVIN" init="CLITEMP" />
                </cmd>
                <cmd id="SET_DUR">
                    <p id="" editor="HDURATION" init="RR" />
                </cmd>
            </accepts>
        </cmds>
    </nodeDef>

    <!-- Dimmable Light -->
    <nodeDef id="DIMM_LIGHT" nls="HCL">
        <editors />
        <sts>
            <st id="ST" editor="HCLST" />
            <st id="RR" editor="HDURATION" />                        
            <st id="GV5" editor="HCLHSB" /> <!-- Brightness -->
            <st id="GV6" editor="HCONNECT" /> <!-- Reachable -->
        </sts>
        <cmds>
            <sends />
            <accepts>
                <cmd id="DON" />
                <cmd id="DOF" />
                <cmd id="QUERY" />
                <cmd id="APPLY" />
                <cmd id="SET_BRI">
                    <p id="" editor="HCLHSB" init="GV5" />
                </cmd>
                <cmd id="SET_DUR">
                    <p id="" editor="HDURATION" init="RR" />
                </cmd>
            </accepts>
        </cmds>
    </nodeDef>

</nodeDefs>